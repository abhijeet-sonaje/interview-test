{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "noEmitOnError": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "sourceMap": false,
        "inlineSources": false,
        "experimentalDecorators": true,
        "target": "es6",
        "skipLibCheck": true,
        "lib": [
            "es6"
        ],
        "outDir": "build",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "paths": {
            "./*": [
                "./*"
            ]
        }
    },
    "compileOnSave": true
}